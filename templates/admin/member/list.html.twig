{% extends 'base.html.twig' %}
{% block body %}
    {% include 'headers/_bandeau_out.html.twig' %}
    <br>
    <br>
    <div class="title-list">
        <h1>GÃ©rer les utilisateurs</h1>
        <br>
        {% include '_flash.html.twig' %}
        <br>
    </div>

    <a class="btn btn-orange btn-ajout" href="{{ path('admin_member_new') }}">Ajouter un utilisateur</a>
    <br>
    {% if members|length > 0 %}
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Login</th>
                <th>Nombre d'annonces</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>


            {% for member in members %}
                <tbody>
                <tr>
                    <td>{{ member.id }}</td>
                    <td>{{ member.name }}</td>
                    <td>{{ member.login }}</td>
                    <td>{{ member.adverts|length }}</td>
                    <td><a class="btn" href="{{ path('admin_member_edit', { 'id': member.id }) }}"><i class="material-icons">edit</i></a></td>
                    <td><a class="btn" href="{{ path('admin_member_delete', { 'id': member.id }) }}"><i class="material-icons">delete</i></a></td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    {% else %}
        <div class="title-list">
            <p>Il n'y a pas encore de membres de la plateforme.</p>
        </div>

    {% endif %}

{% endblock %}